@model IEnumerable<SoftIms.Data.ViewModel.ItemUnitListViewModel>

@{
    int Sno = 1;
}


<div class="table-responsive">
    <table class="table-bordered table">
        <thead class="bg-light-blue">
            <tr class="text-center">
                <th>S.No</th>
                <th>Item Unit Name</th>
                <th>Code</th>
                <th data-no-print="true">Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@Sno</td>
                    <td>@item.Name</td>
                    <td>@item.Code</td>
                    <td data-no-print="true">
                        <div class="float-right">
                            <a type="button" class="btn-sm btn-info" data-toggle="modal" data-target="#myModal" href="@Url.Action("CreateItemUnit","master",new { id = item.Id})"><span class="fa fa-plus"> </span></a>
                            <a type="button" class="btn-sm btn-danger btn-delete-using-modal" data-msg="Are you sure you wnat to delete Item Unit - @item.Name ?" href="@Url.Action("deleteitemunit","master",new { id = item.Id })"><span class="fa fa-minus"> </span></a>
                        </div>
                    </td>
                </tr>
                Sno++;
            }
        </tbody>
    </table>
</div>
