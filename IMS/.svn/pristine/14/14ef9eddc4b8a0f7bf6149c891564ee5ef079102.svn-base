@{
    ViewBag.Title = "सामानको विवरण ";
}
<div class="col-md-12">
    <div class="box box-info">
        <div class="box-body">
            <form class="form-inline frm-search">
                <div class="form-group">
                    <label for="ItemTypeId">सामानको समूह</label> <br>
                    @Html.DropDownList("ItemGroupId", MasterDataList<ItemGroup>("Id", "Name"), "-- सबै  --", new { @class = "form-control", @style = "min-width:200px;" })
                </div>
                <div class="form-group">
                    <label for="Name">सामानको नाम</label> <br>
                    <input type="text" placeholder="सामानको नाम खोजी...." name="Name" id="Name" class="form-control keyword">
                </div>
                <div class="form-group" style="margin-top:30px;">
                    <button type="button" class="btn btn-info btnRefresh" data-showLoader="false" data-resultElement=".item-detail" data-url="@Url.Action("itemdetail","master")"><span class="fa fa-search"></span></button>
                    <a type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal" href="@Url.Action("CreateItem","master",new { id = 0 })"><span class="fa fa-plus"></span></a>
                    <button type="button" class="btn btn-info btnPrint" data-print-element=".item-detail" data-report-title="सामानको विवरण "><span class="fa fa-print"></span></button>
                </div>
            </form>
            <div class="clearfix"></div>
            <div class="item-detail detail">
                @Html.Action("ItemDetail", "master")
            </div>
        </div>
    </div>
</div>







