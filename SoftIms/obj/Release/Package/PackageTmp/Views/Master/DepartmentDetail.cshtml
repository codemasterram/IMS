@model IEnumerable<SoftIms.Data.ViewModel.DepartmentListViewModel>

@{
    int Sno = 1;
}


<div class="table-responsive">
    <table class="table-bordered table">
        <thead class="bg-light-blue">
            <tr class="text-center">
                <th>S.No</th>
                <th>Department</th>
                <th data-no-print="true">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr >
                    <td>@Sno</td>
                    <td  >@item.Name</td>
                    <td data-no-print="true">
                        <a type="button" class="btn-sm btn-info" data-toggle="modal" data-target="#myModal" href="@Url.Action("createdepartment","master",new { id = item.Id})"><span class="fa fa-plus"> </span></a>
                        <a type="button" class="btn-sm btn-danger btn-delete-using-modal" data-msg="Are you sure you wnat to delete department - @item.Name ?" href="@Url.Action("deletedepartment","master",new { id = item.Id })"><span class="fa fa-minus"> </span></a>
                    </td>
                </tr>

                Sno++;
            }
        </tbody>

    </table>
</div>
