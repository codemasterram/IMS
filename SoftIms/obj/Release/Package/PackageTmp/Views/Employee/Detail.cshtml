@model IEnumerable<SoftIms.Data.ViewModel.EmployeeListViewModel>
@{
    ViewBag.Title = "Employee List ";
    int Sno = 1;

}
<table class="table-bordered table">
    <thead class="bg-light-blue">
        <tr>
            <th>S.No</th>
            <th>Name</th>
            <th>Date of Birth</th>
            <th data-no-print="true">Gender</th>
            <th>Department Name</th>
            <th>Designation Name</th>
            <th>Contact No</th>
            <th>Email </th>
            <th>Employee Type </th>
            <th data-no-print="true">Details</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Sno</td>
            <td>@item.Name</td>
            <td>@item.DateOfBirth</td>
            <td data-no-print="true">@item.Gender</td>
            <td>@item.DepartmentName</td>
            <td>@item.DesignationName</td>
            <td>@item.ContactNo</td>
            <td>@item.Email</td>
            <td>@item.EmployeeType</td>
            <td data-no-print="true">
                <a href="@Url.Action("createemployee","employee",new { id = item.Id})"><span class="fa fa-edit"></span>   Edit  </a>
                <a type="button" class="btn-sm btn-danger btn-delete-using-modal" data-msg="Are you sure you wnat to delete Employee - @item.Name ?" href="@Url.Action("deleteemployee","employee",new { id = item.Id })"><span class="fa fa-minus"> </span></a>
            </td>
        </tr>
        Sno++;
    }


</table>
