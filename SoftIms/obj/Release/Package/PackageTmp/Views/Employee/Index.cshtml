@{
    ViewBag.Title = "Employee Details ";
}
<div class="col-md-12">
    <div class="box box-info">
        <div class="box-body">
            <form class="form-inline frm-search">
                <div class="form-group">
                    <label for="EmployeeType">Employee type</label> <br>
                    @Html.DropDownList("employeetypeid", MasterDataList(eSelectListType.EmployeeType, null), "-- All --", new { @class = "form-control", @style = "min-width:200px;" })
                </div>
                <div class="form-group">
                    <label for="Department">Department</label> <br>
                    @Html.DropDownList("DepartmentId", MasterDataList<Department>("Id", "Name"), "-- All --", new { @class = "form-control", @style = "width:150px;" })
                </div>
                <div class="form-group">
                    <label for="DesignationId">Designation</label> <br>
                    @Html.DropDownList("designationid", MasterDataList<Designation>("Id", "Name"), "-- All --", new { @class = "form-control", @style = "min-width:200px;" })
                </div>

                <div class="form-group">
                    <label for="status">Status</label> <br>
                    <select id="status" name="status" class="form-control">
                        <option value="0">--All--</option>
                        <option value="1">Active</option>
                        <option value="2">Passive</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="Name">Name</label> <br>
                    <input type="text" placeholder="Employee name to search" name="Name" id="Name" class="form-control keyword">
                </div>
                <div class="form-group" style="margin-top:30px;">
                    <button type="button" class="btn btn-info btnRefresh" data-showLoader="false" data-resultElement=".employee-detail" data-url="@Url.Action("detail","employee")"><span class="fa fa-search"></span></button>
                    <button type="button" class="btn btn-info btnPrint" data-print-element=".employee-detail" data-report-title="Employee Detail"><span class="fa fa-print"></span></button>
                    <a href="@Url.Action("CreateEmployee","employee",new { id = 0 })" class="btn btn-primary "><span class="fa fa-plus"></span></a>
                </div>
            </form>
            <div class="clearfix"></div>
            <div class="employee-detail detail">
                @Html.Action("Detail", "Employee")
            </div>
        </div>
    </div>
</div>







