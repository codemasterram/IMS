</head>
<body class="hold-transition login-page login-container">
    <div class="container">
        <div class="login-box">

            <div class="login-logo text-center header" style="background:#e74c3c; margin:20px 0 0 0px; padding:15px; color:#fff; ">
                <span>Forget Password</span>
            </div>
            <div class="login-box-body text-center">
                @if (TempData["Success"] != null)
            {
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                }
                @if (TempData["Errors"] != null)
            {
                    <div class="alert alert-danger">
                        @TempData["Errors"]
                    </div>
                }
                <p class="login-box-msg no-margin">Enter your Email or Username!</p>
                @using (Html.BeginForm("ForgetPassword", "user", FormMethod.Post))
            {
                    <div>@Html.AntiForgeryToken()</div>
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(x => x.userId, new { @class = "form-control", @placeholder = "Username / Email Address" })
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-xs-12">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">Retrive Login Info</button>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
