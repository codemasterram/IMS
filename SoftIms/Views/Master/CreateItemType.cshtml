@model SoftIms.Data.ViewModel.ItemTypeViewModel
@using (Html.BeginForm("createitemtype", "master", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal smooth-tab" }))
{
    @Html.HiddenFor(x => x.Id)
    @Html.AntiForgeryToken()
    @Html.Hidden("next", "family-detail-tab")
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @class = "col-md-3" })
        <div class="col-md-6">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control col-md-6" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Alias, new { @class = "col-md-3" })
        <div class="col-md-6">
            @Html.TextBoxFor(x => x.Alias, new { @class = "form-control col-md-6" })
            @Html.ValidationMessageFor(x => x.Alias)
        </div>
    </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-success">Submit</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
}
