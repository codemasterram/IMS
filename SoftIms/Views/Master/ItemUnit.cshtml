@{
    ViewBag.Title = "सामानको इकाई विबरण";
}
<div class="row">
    <div class="col-md-12">
        <div class="box box-info">
            <div class="box-body">
                <form class="form-inline">
                    <div class="form-group">
                        <label for="Name">इकाईको नाम</label> <br>
                        @Html.TextBox("name", "", new { @class = "form-control keyword", @style = "width:200px", @placeholder = "इकाईको नाम..." })
                    </div>
                    <div class="form-group" style="margin-top:25px;">
                        <button type="button" class="btn btn-info btn-reload" data-showLoader="false" data-resultElement=".itemUnit-detail" data-url="@Url.Action("ItemUnitDetail","master")"><span class="fa fa-search"></span></button>
                        <a class="btn btn-new btn-info" data-id="0" data-url="@Url.Action("CreateItemUnit", "master")" data-title="Create Department"><i class="fa fa-plus" aria-hidden="true"></i></a>
                        <button type="button" class="btn btn-info btnPrint" data-print-element=".itemUnit-detail" data-report-title="Item Unit Detail"><span class="fa fa-print"></span></button>
                    </div>
                </form>
                <div class="clearfix"></div>
                <div class="itemUnit-detail detail lazy-loading" data-url="@Url.Action("ItemUnitDetail","master")">
                </div>
            </div>
        </div>
    </div>
</div>
