@{
    ViewBag.Title = "Department Detail";
}
<div class="col-md-12">
    <div class="box box-solid">
        <div class="box-body">
            <form class="form-inline frm-search">  
                <div class="form-group">
                    <label for="Name">Department name</label> <br>
                    <input type="text" placeholder="Department name..." name="Name" id="Name" class="form-control keyword focus-first">
                </div>
                <div class="form-group control-group">
                    <button type="button" class="btn btn-info btn-reload" data-url="@Url.Action("departmentdetail","master")"><span class="fa fa-search"></span></button>
                    <a class="btn btn-new btn-primary" data-url="@Url.Action("createdepartment", "master")" data-title="Create Department"><i class="fa fa-plus" aria-hidden="true"></i></a>
                </div>
            </form>
            <div class="clearfix"></div>
            <div class="detail lazy-loading"  data-url="@Url.Action("departmentdetail","master")">
            </div>
        </div>
    </div>
</div>






