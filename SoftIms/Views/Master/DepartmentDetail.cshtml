@model IList<DepartmentListViewModel>
@{
    int sno = 0;
}
<div class="table-responsive">
    <table class="table table-striped table-condensed">
        <thead class="bg-light-gray">
            <tr class="text-center">
                <th width="30">SNo</th>
                <th>Department Name</th>
                <th data-no-print="true" width="50">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                sno++;
                <tr>
                    <td>@sno</td>
                    <td>@item.Name</td>
                    <td data-no-print="true">
                        <a href="javascript:;" class="btn-new" data-url="@Url.Action("CreateDepartment", "master",new { id = item.Id})" data-title="Department Detail"><i class="fa fa-edit"></i></a>
                        <a href="javascript:;" class="btn-delete text-danger" data-url="@Url.Action("deletedepartment","master",new { id = item.Id })"><span class="fa fa-trash"> </span></a>
                    </td>
                </tr> 
            }
        </tbody>
        @if (!Model.Any())
        {
            <tfoot class="bg-danger">
                <tr>
                    <td colspan="3">Record not found</td>
                </tr>
            </tfoot>
        }
    </table>
</div>