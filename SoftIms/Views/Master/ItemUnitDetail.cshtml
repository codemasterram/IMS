@model IEnumerable<SoftIms.Data.ViewModel.ItemUnitListViewModel>
@{
    int Sno = 1;
}  
<div class="table-responsive">
    <table class="table-bordered table">
        <thead class="bg-light-blue">
            <tr class="text-center">
                <th width="30">S.No</th>
                <th>Item Unit Name</th>
                <th>Code</th>
                <th data-no-print="true">Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@Sno</td>
                    <td>@item.Name</td>
                    <td>@item.Code</td>
                    <td data-no-print="true">
                        <a class="btn-sm btn-new btn-info" data-id="0" data-url="@Url.Action("CreateItemUnit", "master",new { id = item.Id})" data-title="Edit Item Unit"><i class="fa fa-plus" aria-hidden="true"></i></a>
                        <a href="javascript:;" class="btn-sm btn-danger btn-delete" data-url="@Url.Action("deleteitemunit","master",new { id = item.Id })"><span class="fa fa-trash"> </span></a>
                    </td>
                </tr>
                Sno++;
            }
            @if (Sno == 1)
            {
                <tr>
                    <td colspan="8" class="text-center bg-danger"><b>तथ्यांक फेला परेन !</b></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    initializeCommon();
</script>
